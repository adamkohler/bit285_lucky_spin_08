@model IEnumerable<LuckySpin.Models.Spin>
<!-- TODO: Notice that this Model is an _IEnumerable_ collection of Spin objects -->
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    int counter = 0; // to track the spin number
}
<h1>All Your Luck</h1>
<table>
    <thead>
        <tr>
            <th>Spin #</th>
            <th>Result</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (LuckySpin.Models.Spin spin in @Model)
        { // Go through each element of the collection
            counter++; // track the spin number
            <tr>
                <td>@counter</td>
                <td>@(spin.IsWinning ? "Win" : "Lose")</td>
                <!-- TODO: Add a cell that displays the Spin Balance-->
				<td>$@spin.Balance</td>
            </tr>
        }
    </tbody>
</table>
<!-- TODO: Add a link to the Start Over action -->
<a asp-action="StartOver"
   asp-controller="Spinner"
   asp-route-id="@ViewBag.PlayerId">
    <!-- Pass the player id (HINT: use a ViewBag property) -->
    Start Over
</a>